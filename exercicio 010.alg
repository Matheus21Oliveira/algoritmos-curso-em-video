algoritmo "exercício 10"
var
altura: real
largura: real
area: real
tinta: real
inicio
escreval ("quanto de altura tem a sua parede?")
leia (altura)
escreval ("quanto de largura tem a sua parede?")
leia (largura)
area <- altura * largura
tinta <- area / 2
escreval ("na parede tem" , (area) , " metros quadrados de area")
escreva ("nela será usado" , (tinta) , " litros de tinta")
fimalgoritmo
