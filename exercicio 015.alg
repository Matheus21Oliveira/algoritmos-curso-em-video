algoritmo "exercicio 15"

var
nome: caractere
dia,mes: inteiro
salario: real
inicio
escreval ("qual o nome do funcionario?")
leia (nome)
escreval ("quantos dias tem o mes atual?")
leia (mes)
escreval ("quantos dias " , nome , " trabalhou?")
leia (dia)
salario <- dia*8*25
escreval (nome , " vai ganhar " , salario , ",00 reais")
fimalgoritmo
