algoritmo "exercício 8"
var
metros: real
km: real
dm: real
inicio
escreval ("digite quantos metros voce corre diariamente")
leia (metros)
km <- metros * 1000
dm <- metros * 10
escreval (" a distância em km que voce corre" , (metros) , " é de" ,(km))
escreva (" a distância em dm que voce corre" , (metros) , " é de" ,(dm))

fimalgoritmo
